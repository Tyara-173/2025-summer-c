{
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.17"
  },
  "tasks": {
    "start": "deno run --watch --allow-net --allow-read main.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.window"
    ]
  },
  "lint": {
    "include": [
      "./**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "./**/*.ts"
    ]
  },
  "test": {
    "include": [
      "./**/*.test.ts"
    ]
  }
}